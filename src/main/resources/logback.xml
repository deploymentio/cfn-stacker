<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<jmxConfigurator />
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%d][%t][%1p] %c - %m%n</pattern>
		</encoder>
	</appender>

	<logger name="org.springframework" level="INFO" />

	<root level="INFO">
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>
